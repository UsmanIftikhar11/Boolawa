<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@color/colorPrimaryDark"

    tools:context="com.example.project.boolawa.SignUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">




            <TextView
                android:id="@+id/Logo_signUp"
                android:text="Update Info"
                style="@style/txtView"
                />

            <EditText
                android:id="@+id/update_servicename"
                style="@style/editText_style1"
                android:layout_marginTop="40dp"
                android:hint="Full Name"
                android:inputType="text"
                android:layout_below="@+id/Logo_signUp"/>

            <EditText
                android:id="@+id/update_servicecontact"
                style="@style/editText_style1"
                android:layout_marginTop="10dp"
                android:hint="Contact #"
                android:inputType="phone"
                android:layout_below="@+id/update_servicename"/>

            <EditText
                android:id="@+id/update_servicecharges"
                style="@style/editText_style1"
                android:layout_marginTop="10dp"
                android:hint="Your Charges"
                android:inputType="text"
                android:layout_below="@+id/update_servicecontact"/>

            <TextView
                android:id="@+id/txt_updateAvailability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/update_servicecharges"
                android:layout_marginTop="20dp"
                android:text="Select Availability"
                android:textSize="18sp"
                android:textColor="#FFFFFF"/>

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinner_updateAvailability"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignBaseline="@+id/txt_updateAvailability"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"/>

            <Button
                android:id="@+id/btn_update"
                android:text="Update"
                style="@style/button_style"
                android:layout_below="@+id/txt_updateAvailability"
                android:layout_marginTop="50dp"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>