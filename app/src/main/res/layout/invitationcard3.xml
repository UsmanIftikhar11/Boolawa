<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/layout_invitation3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/invitation3"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/txt_invited_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="YOU ARE INVITED TO A"
            android:textColor="#FFFFFF"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/txt_event_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_invited_to"
            android:layout_marginTop="10dp"
            android:text="Birthday party"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txt_honor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_event_title3"
            android:layout_marginTop="5dp"
            android:text="IN HONOR OF"
            android:textColor="#FFFFFF"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/txt_event_personName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_honor"
            android:layout_marginTop="10dp"
            android:text="Person Name"
            android:textColor="#FFFFFF"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/txt_event_dateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_event_personName"
            android:layout_marginTop="10dp"
            android:text="Date And Time"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

        <TextView
            android:id="@+id/txt_dotedLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_event_dateTime"
            android:layout_marginTop="10dp"
            android:text="............................................."
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/txt_event_adress3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_dotedLine"
            android:layout_marginTop="10dp"
            android:text="Adress"
            android:textColor="#FFFFFF"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/txt_event_HostedBy3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_event_adress3"
            android:layout_marginTop="10dp"
            android:text="Hosted By"
            android:textColor="#FFFFFF"
            android:textSize="10sp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_saveCard3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_invitation3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Save"
        android:background="@drawable/savebtn_style"/>

    <Button
        android:id="@+id/btn_editCard3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_saveCard3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Edit"
        android:background="@drawable/savebtn_style"/>

</RelativeLayout>
    </ScrollView>
    </RelativeLayout>