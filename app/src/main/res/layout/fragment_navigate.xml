<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/add_img"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>

    <EditText
        android:id="@+id/txt_picDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/img_btn_add"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Say something about it"
        style="@style/editText_style1"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btn_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_picDetail"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:text="Share with friends"
        android:background="@drawable/savebtn_style"
        android:padding="10dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/memories_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_share">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>