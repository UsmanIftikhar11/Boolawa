<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.project.boolawa.SingleUser"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/txt_singleUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:padding="15dp"
        android:text="UserName"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btn_sendReq"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_singleUserName"
        android:layout_marginTop="20dp"
        style="@style/button_style"
        android:text="Send Friend Request"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btn_declineReq"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_sendReq"
        android:layout_marginTop="20dp"
        style="@style/button_style"
        android:text="Decline Friend Request"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="16sp"
        android:visibility="invisible"
        android:enabled="false"/>

</RelativeLayout>
