<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_photographer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/login"
        android:text="Photgrapher"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/btn_caterer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_photographer"
        android:text="caterer"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/txt_photogrpaher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_caterer"
        android:text="Available Photographers"
        android:layout_marginTop="5dp"
        android:visibility="invisible"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/txt_caterer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_caterer"
        android:text="Available Caterer"
        android:layout_marginTop="5dp"
        android:visibility="invisible"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="14sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/service_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txt_photogrpaher"
        android:layout_marginTop="10dp">


    </android.support.v7.widget.RecyclerView>



</RelativeLayout>